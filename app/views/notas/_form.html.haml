-title "New Note"
#nota_form
  - form_for @nota do |f|
    = f.error_messages
    %p
      %b= f.label :title
      = f.text_field :title, :size => 31
    %p
      %b= f.label :body
      = f.text_area :body, :rows => 9, :cols => 30, :class => 'word_count'
      %span.counter
    %p
      %b= f.label :topic_id
      = collection_select(:nota,:topic_id, Topic.all, :id, :name, :prompt => true)
    %p
      %b= f.label :category_id
      = collection_select(:nota,:category_id,Category.all, :id, :name, :prompt => true)
    %p
      = submit_tag "Save Note"
