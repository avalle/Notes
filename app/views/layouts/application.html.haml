!!!
%html
  %head
    %title
      = yield(:title) || "Tips & Notes"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "application","tipsy","menu","jquery", 'highlight'
    = javascript_include_tag :defaults,'jquery.tipsy','jquery-ui-1.8.6.custom.min'
    = javascript_include_tag :on_the_spot, :ckeditor
    = csrf_meta_tag
    = yield(:head)

  %body
    #header
      #title
        - if show_title?
          = yield(:title) || "Tips & Notes"
        #subtitle
          %span
            %small shared notes
    .clear
    #container
      #side_panel
        #new_note
          = link_to "Nueva Nota", new_nota_path
        #tag_cloud
          - Nota.tag_counts_on(:tags).collect(&:name).each do |tag|
            %p
              = link_to tag,:controller => "pages", :action => "tags", :tag => tag
              == (#{Nota.tagged_with(tag).size})
        #user_information
          %p
            Logged as
          %p
            Salir

      #content
        = yield
        
